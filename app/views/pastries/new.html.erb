<h1>Enter New Pastry</h1>

<div class="row">
    <div class="col-xs-6 col-xs-offset-3">
        <%= form_for @pastry do |form| %>
            <div class="form-group">
                <%= form.label :name %>
                <%= form.text_field :name, class: "form-control", required: true %>
            </div>
            <div class="form-group">
                <%= form.label :description %>
                <%= form.text_field :description, class: "form-control", required: true  %>
            </div>
            <div class="form-group">
                <%= form.label :photo_url%>
                <%= form.text_field :photo_url, class: "form-control", required: true  %>
            </div>
            <div>
                <%= form.label :category %>
                <% cakes = ["Wedding Cake", "Birthday Cake", "Specialty Cake", "CupCakes"] %>
                <%= form.select :category, cakes, {class: "form-control" } %>
            </div>
            <div class="form-group"><br>
                <%= form.submit 'Create Pastry', class: "btn btn-warning" %>
            </div>
        <% end %>
    </div>
</div>
